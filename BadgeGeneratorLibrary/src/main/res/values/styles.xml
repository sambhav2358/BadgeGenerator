<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <declare-styleable name="Badge">

        <attr name="badgeLabel" format="string"/>
        <attr name="badgeMessage" format="string"/>
        <attr name="badgeColor" format="enum">
            <enum name="badgeColorBlue" value="blue"/>
            <enum name="badgeColorBrightGreen" value="brightgreen"/>
            <enum name="badgeColorGreen" value="green"/>
            <enum name="badgeColorYellowGreen" value="yellowgreen"/>
            <enum name="badgeColorYellow" value="yellow"/>
            <enum name="badgeColorOrange" value="orange"/>
            <enum name="badgeColorRed" value="red"/>
            <enum name="badgeColorLightGrey" value="lightgrey"/>
        </attr>

    </declare-styleable>
    
</resources>